<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hamlet.newproj">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Weather"

        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".ConnectActivity"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SensorViewActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".MemoryActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".SetUrlPopup"
            android:theme="@style/Theme.D1NoTitleDim"/>

        <activity android:name=".ClearPopup"
            android:theme="@style/Theme.D1NoTitleDim"/>

        <activity android:name=".TimerPopup"
             android:theme="@style/Theme.D1NoTitleDimNoShadow"/>
        <activity android:name=".NavigationPopup"
            android:theme="@style/Theme.D1NoTitleDim"/>



        <!-- ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>
